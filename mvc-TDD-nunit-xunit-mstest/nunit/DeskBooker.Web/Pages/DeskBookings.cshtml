@page
@model DeskBookingsModel
@{
  ViewData["Title"] = "Desk Bookings";
}

<h1 class="display-4">Desk Bookings</h1>

<p class="lead">Here you see a table with all desk bookings ordered by date.</p>

<hr />

<table class="table table-striped table-bordered dt-responsive nowrap">
  <thead class="thead-light">
    <tr>
      <th>Date</th>
      <th>Desk Id</th>
      <th>Email</th>
      <th>FirstName</th>
      <th>LastName</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var deskBooking in Model.DeskBookings)
    {
      <tr>
        <td>@deskBooking.Date.ToShortDateString()</td>
        <td>@deskBooking.DeskId</td>
        <td>@deskBooking.Email</td>
        <td>@deskBooking.FirstName</td>
        <td>@deskBooking.LastName</td>
      </tr>
    }
  </tbody>
</table>

